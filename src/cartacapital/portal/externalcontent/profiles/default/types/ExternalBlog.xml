<?xml version="1.0"?>
<object name="ExternalBlog" meta_type="Dexterity FTI" i18n:domain="cartacapital.portal.externalcontent"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">External Blog</property>
 <property name="description" i18n:translate="">An External Blog within our network</property>
 <property name="content_icon">++resource++cartacapital.portal.externalcontent/blog-icon.png</property>
 <property name="factory">ExternalBlog</property>
 <property name="add_view_expr">string:${folder_url}/++add++ExternalBlog</property>
 <property name="link_target"></property>
 <property name="immediate_view">view</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
    <element value="Folder"/>
    <element value="ExternalBlogEntry"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">blog_view</property>
 <property name="view_methods">
  <element value="blog_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <property name="add_permission">cmf.AddPortalContent</property>
 <property name="klass">cartacapital.portal.externalcontent.content.blog.ExternalBlog</property>
 <property name="behaviors">
  <element value="plone.app.dexterity.behaviors.metadata.IDublinCore"/>
  <element value="plone.app.content.interfaces.INameFromTitle"/>
  <element
     value="plone.app.dexterity.behaviors.exclfromnav.IExcludeFromNavigation"/>
  <element value="Products.CMFPlone.interfaces.constrains.ISelectableConstrainTypes"/>
  <element value="plone.app.referenceablebehavior.referenceable.IReferenceable"/>
 </property>
 <property name="schema"></property>
 <property name="model_source"></property>
 <property name="model_file">cartacapital.portal.externalcontent.content.schema:ExternalBlog.xml</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    icon_expr="" link_target="" url_expr="string:${object_url}"
    visible="True" i18n:attributes="title">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    icon_expr="" link_target="" url_expr="string:${object_url}/edit"
    visible="True" i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action>
 <action title="Config" action_id="config" category="object" condition_expr=""
    icon_expr="" link_target="" url_expr="string:${object_url}/@@config"
    visible="True" i18n:attributes="title">
  <permission value="Modify portal content"/>
 </action> 
</object>
