<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:i18n="http://xml.zope.org/namespaces/i18n"
       xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
       i18n:domain="cartacapital.portal.externalcontent">
    <schema>
      <field name="siteUrl" type="zope.schema.TextLine">
        <default>http://</default>
        <description i18n:translate="">Address to this site (i.e.:http://myblog.cartacapital.com.br)
        </description>
        <title i18n:translate="">Site address</title>
      </field>
      <field name="remoteUrl" type="zope.schema.TextLine">
        <default>http://</default>
        <description i18n:translate="">The Feed address (url) to this blog.
        </description>
        <title i18n:translate="">Feed Address</title>
      </field>
    <field name="image" type="plone.namedfile.field.NamedBlobImage"
        marshal:primary="true">
      <description />
      <title i18n:translate="Image">Image</title>
    </field>
    <field name="section" type="zope.schema.Choice">
      <description></description>
      <title i18n:translate="Section">Section</title>
      <required>False</required>
      <vocabulary>collective.nitf.AvailableSections</vocabulary>
    </field>    
    </schema>
</model>